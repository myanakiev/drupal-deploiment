{#
/**
 * @file
 * Template for Radix Bryant Flipped.
 *
 * Variables:
 * - $css_id: An optional CSS id to use for the layout.
 * - $content: An array of content, each item in the array is keyed to one
 * panel of the layout. This layout supports the following sections:
 */
#}

{%
  set classes = [
    'layout',
	'layout--four-squares',
  ]
%}

{%if content %}
  <div{{ attributes.addClass(classes) }}>
    {% if content.top_left %}
      <div class="layout__region layout__region--top_left">
	    {{ content.top_left }}
	  </div>
	{% endif %}
	
    {% if content.top_right %}
      <div class="layout__region layout__region--top_right">
	    {{ content.top_right }}
	  </div>
	{% endif %}
	
	<div class="layout__region layout__region--clear"></div>
	
    {% if content.bottom_left %}
      <div class="layout__region layout__region--bottom_left">
	    {{ content.bottom_left }}
	  </div>
	{% endif %}
	
    {% if content.bottom_right %}
      <div class="layout__region layout__region--bottom_right">
	    {{ content.bottom_right }}
	  </div>
	{% endif %}
  </div>
{% endif %}
